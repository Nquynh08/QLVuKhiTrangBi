@model QLVuKhiTrangBi.Models.LoaiTrangBi

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thêm Loại trang bị mới</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form asp-action="Index" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <div class="col-sm-3"></div>
                                <label asp-for="MaLoaiTb" class="col-sm-2 col-form-label">Mã loại trang bị</label>
                                <div class="col-sm-4">
                                    <input asp-for="MaLoaiTb" class="form-control" name="maloaitb" />
                                </div>
                                <span asp-validation-for="MaLoaiTb" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3"></div>
                                <label asp-for="TenLoaiTb" class="col-sm-2 col-form-label">Tên loại trang bị</label>
                                <div class="col-sm-4">
                                    <input asp-for="TenLoaiTb" class="form-control" name="tenloaitb" />
                                </div>
                                <span asp-validation-for="TenLoaiTb" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4"></div>
                                <input type="submit" value="Xác nhận" class="btn btn-primary col-sm-1" />
                                <div class="col-sm-1"></div>
                                <input type="reset" value="Hủy bỏ" class="btn btn-danger col-sm-1" />
                            </div>
                            <span class="text-danger">
                                @ViewBag.Message
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="allLoaiTB"></div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#allLoaiTB').load('/QLLoaiTrangBi/DSLoaiTB');
        });
    </script>
}