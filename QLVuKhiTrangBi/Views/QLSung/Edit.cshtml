@model QLVuKhiTrangBi.Models.Sung

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Cập nhật thông tin súng</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group row">
                                <div class="col-sm-3"></div>
                                <label asp-for="SoHieuSung" class="col-sm-2 col-form-label">Số hiệu súng</label>
                                <div class="col-sm-4">
                                    <input asp-for="SoHieuSung" class="form-control" name="sosung" asp-readonly="true" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3"></div>
                                <label asp-for="DonViTinh" class="col-sm-2 col-form-label">Đơn vị tính</label>
                                <div class="col-sm-4">
                                    <input asp-for="DonViTinh" class="form-control" name="dvt" />
                                </div>
                                <span asp-validation-for="DonViTinh" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3"></div>
                                <label asp-for="PhanCap" class="col-sm-2 col-form-label">Phân cấp chất lượng</label>
                                <div class="col-sm-4">
                                    <input asp-for="PhanCap" class="form-control" name="phancap" />
                                </div>
                                <span asp-validation-for="PhanCap" class="text-danger"></span>
                            </div>
                          
                            <div class="form-group row">
                                <div class="col-sm-3"></div>
                                <label asp-for="MaLoaiSung" class="col-sm-2 col-form-label">Loại súng</label>
                                <div class="col-sm-4">
                                    <input asp-for="MaLoaiSung" class="form-control" name="MaLoaiSung" asp-readonly="true" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3"></div>
                                <label asp-for="SoQd" class="col-sm-2 col-form-label">Số Quyết định</label>
                                <div class="col-sm-4">
                                    <input asp-for="SoQd" class="form-control" name="SoQd" asp-readonly="true" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4"></div>
                                <input type="submit" value="Xác nhận" class="btn btn-primary col-sm-1" />
                                <div class="col-sm-1"></div>
                                <input type="reset" value="Hủy bỏ" class="btn btn-danger col-sm-1" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="allSung"></div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#allSung').load('/QLSung/DSSung');
        });
    </script>
}