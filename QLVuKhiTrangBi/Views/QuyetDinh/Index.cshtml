@model QLVuKhiTrangBi.Models.QuyetDinh

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thêm Quyết định mới</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form asp-action="Index" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="SoQd" class="col-sm-2 col-form-label">Số Quyết định</label>
                                <div class="col-sm-4">
                                    <input asp-for="SoQd" class="form-control" name="soqd" />
                                </div>
                                <span asp-validation-for="SoQd" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <input type="file" name="file" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <input type="submit" value="Xác nhận" class="btn btn-primary" />
                            </div>
                            <span class="text-danger">
                                @ViewBag.MessQD
                                @ViewBag.MessFile
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="allQD"></div>

@section scripts{
  <script type="text/javascript">
    $(document).ready(function () {
        $('#allQD').load('/QuyetDinh/DSQuyetDinh');
    });
  </script>
}
