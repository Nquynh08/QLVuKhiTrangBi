@model QLVuKhiTrangBi.Models.LuotBienChe

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thêm lượt biên chế mới</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form asp-action="Index" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <label asp-for="ThoiGianBd" class="col-sm-2 col-form-label">Thời gian bắt đầu</label>
                                <div class="col-sm-3">
                                    <input asp-for="ThoiGianBd" class="form-control" name="thoigianbd" />
                                </div>
                                <span asp-validation-for="ThoiGianBd" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <label asp-for="ThoiGianKt" class="col-sm-2 col-form-label">Thời gian kết thúc</label>
                                <div class="col-sm-3">
                                    <input asp-for="ThoiGianKt" class="form-control" name="thoigiankt" />
                                </div>
                                <span asp-validation-for="ThoiGianKt" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <label asp-for="GhiChu" class="col-sm-2 col-form-label">Ghi chú</label>
                                <div class="col-sm-3">
                                    <input asp-for="GhiChu" class="form-control" name="ghichu" />
                                </div>
                                <span asp-validation-for="GhiChu" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6"></div>
                                <input type="submit" value="Xác nhận" class="btn btn-primary col-sm-1" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="dslbc"></div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#dslbc').load('/BienChe/DSbienche');
        });
    </script>
}